<Window x:Class="CatAdaptive.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatAdaptive.App"
        xmlns:vm="clr-namespace:CatAdaptive.App.ViewModels"
        xmlns:views="clr-namespace:CatAdaptive.App.Views"
        mc:Ignorable="d"
        Title="CAT Pharmacy - Adaptive Tutor" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:UploadViewModel}">
            <views:UploadView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LessonsViewModel}">
            <views:LessonsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdaptiveSessionViewModel}">
            <views:AdaptiveSessionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DebugViewModel}">
            <views:DebugView/>
        </DataTemplate>
    </Window.Resources>

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#1E293B">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo/Title -->
                <StackPanel Grid.Row="0" Margin="20,25,20,20">
                    <TextBlock Text="ðŸ§¬ CAT Pharmacy" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Adaptive Mastery Tutor" 
                               FontSize="11" Foreground="#94A3B8" Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1">
                    <TextBlock Text="CONTENT" FontSize="10" FontWeight="SemiBold" 
                               Foreground="#64748B" Margin="20,10,20,8"/>
                    
                    <Button Content="ðŸ“¤  Upload Content" 
                            Command="{Binding NavigateToUploadCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <Button Content="ðŸ“˜  Lessons" 
                            Command="{Binding NavigateToLessonsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <TextBlock Text="ASSESS" FontSize="10" FontWeight="SemiBold" 
                               Foreground="#64748B" Margin="20,25,20,8"/>
                    
                    <Button Content="ðŸŽ¯  CAT" 
                            Command="{Binding NavigateToCatCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                            
                    <TextBlock Text="SYSTEM" FontSize="10" FontWeight="SemiBold" 
                               Foreground="#64748B" Margin="20,25,20,8"/>
                    
                    <Button Content="ðŸ”§  Debug" 
                            Command="{Binding NavigateToDebugCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>

                

            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="25,15" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                <TextBlock Text="{Binding CurrentPage}" FontSize="18" FontWeight="SemiBold" Foreground="#1E293B" AutomationProperties.Name="Current page title"/>
            </Border>

            <!-- Content -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="0" AutomationProperties.Name="Main content area">
                <ContentControl.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ContentControl.Triggers>
            </ContentControl>

            <!-- Notification Center -->
            <Grid Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Panel.ZIndex="10">
                <ItemsControl ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10" Width="300">
                                <StackPanel>
                                    <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="#1E293B"/>
                                    <Button Content="Ã—" HorizontalAlignment="Right" Margin="10,5,0,0" Background="Transparent" BorderThickness="0" Foreground="#64748B" FontSize="16"
                                            Command="{Binding DataContext.RemoveNotificationCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"
                                            AutomationProperties.Name="Close notification"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
