<UserControl x:Class="CatAdaptive.App.Views.LessonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="My Learning" Style="{StaticResource PageTitleStyle}"/>
            <TextBlock Text="Track your progress and continue your personalized learning journey"
                      Style="{StaticResource PageSubtitleStyle}"/>
        </StackPanel>

        <!-- Stats Row -->
        <Grid Grid.Row="1" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Completed Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding CompletedLessonsCount}"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="Completed"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <Border Grid.Column="0"
                            Width="56" Height="56"
                            Background="{StaticResource PrimaryLightBrush}"
                            CornerRadius="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <TextBlock Text="âœ“" FontSize="28" Foreground="{StaticResource PrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Average Score Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding AverageScore, StringFormat='{}{0:F0}%%'}"
                                  FontSize="48"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource SecondaryBrush}"/>
                        <TextBlock Text="Avg Score"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <Border Grid.Column="0"
                            Width="56" Height="56"
                            Background="#CCFBF1"
                            CornerRadius="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“Š" FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Status Card -->
            <Border Grid.Column="4" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding HasContent, Converter={StaticResource BoolToActiveConverter}}"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="Status"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <Border Grid.Column="0"
                            Width="56" Height="56"
                            Background="{StaticResource SuccessBackgroundBrush}"
                            CornerRadius="12"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                        <TextBlock Text="ðŸŽ¯" FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <Border Width="64" Height="64"
                            Background="{StaticResource PrimaryLightBrush}"
                            CornerRadius="16"
                            Margin="0,0,0,24">
                        <TextBlock Text="âŸ³" FontSize="32" Foreground="{StaticResource PrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="Spinner"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Spinner"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Border>
                    <TextBlock Text="Loading your progress..."
                              FontSize="18"
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>

            <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- No Content State -->
                <Border Grid.Row="0"
                        Style="{StaticResource CardStyle}"
                        Visibility="{Binding HasContent, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                        VerticalAlignment="Center"
                        Margin="0,48">
                    <StackPanel HorizontalAlignment="Center" MaxWidth="500">
                        <Border Width="120" Height="120"
                                Background="{StaticResource PrimaryLightBrush}"
                                CornerRadius="24"
                                Margin="0,0,0,24">
                            <TextBlock Text="ðŸ“š" FontSize="60"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No Content Yet"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  TextAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Upload PowerPoint files to create your personalized learning content"
                                  FontSize="16"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,24"/>
                        <Button Content="Upload Content"
                               Command="{Binding StartAdaptiveLessonCommand}"
                               Style="{StaticResource ModernButtonStyle}"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Content Available -->
                <Grid Grid.Row="0"
                      Visibility="{Binding HasContent, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Ready to Learn"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,24"/>

                        <!-- Start Button Card -->
                        <Border Style="{StaticResource CardStyle}"
                                Background="{StaticResource PrimaryBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Start a Study Session"
                                              FontSize="22"
                                              FontWeight="Bold"
                                              Foreground="White"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="Continue your personalized learning journey with AI-adapted content"
                                              FontSize="14"
                                              Foreground="#C7D2FE"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                                <Button Grid.Column="1"
                                       Content="Start Learning â†’"
                                       Command="{Binding StartAdaptiveLessonCommand}"
                                       Background="White"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Padding="24,16"
                                       BorderThickness="0"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                               CornerRadius="10"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Status Message -->
                        <Border Visibility="{Binding StatusMessage, Converter={StaticResource NullToCollapsedConverter}}"
                               Background="{StaticResource InfoBackgroundBrush}"
                               BorderBrush="{StaticResource InfoBrush}"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,24,0,0">
                            <TextBlock Text="{Binding StatusMessage}"
                                      Foreground="{StaticResource InfoBrush}"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
