<UserControl x:Class="CatAdaptive.App.Views.AdaptiveSessionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Adaptive Testing Session" FontSize="28" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

        <!-- Setup Panel - shown when session not active -->
        <Border Grid.Row="1" Background="#F8FAFC" CornerRadius="12" Padding="30"
                Visibility="{Binding IsSessionActive, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <StackPanel MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Start New Session" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" TextAlignment="Center"/>
                
                <TextBlock Text="Your Name" FontWeight="Medium" Margin="0,0,0,5"/>
                <TextBox Text="{Binding LearnerName, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="12" Background="White" BorderBrush="#CBD5E1" Margin="0,0,0,15"/>
                
                <TextBlock Text="Topic (optional)" FontWeight="Medium" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SelectedTopic, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="12" Background="White" BorderBrush="#CBD5E1" Margin="0,0,0,20"/>
                
                <Button Content="Start Session" 
                        Command="{Binding StartSessionCommand}"
                        Padding="15,12"
                        Background="#2563EB" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
                
                <TextBlock Text="{Binding FeedbackMessage}" 
                           Foreground="#EF4444" TextAlignment="Center" Margin="0,15,0,0"
                           Visibility="{Binding ShowFeedback, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </Border>

        <!-- Active Session Panel -->
        <Grid Grid.Row="1" Visibility="{Binding IsSessionActive, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Progress Bar -->
            <Border Grid.Row="0" Background="#F1F5F9" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Questions" FontSize="12" Foreground="#64748B"/>
                        <TextBlock Text="{Binding QuestionsAnswered}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Ability (Î¸)" FontSize="12" Foreground="#64748B"/>
                        <TextBlock Text="{Binding CurrentTheta, StringFormat='{}{0:F2}'}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                        <TextBlock Text="Std. Error" FontSize="12" Foreground="#64748B"/>
                        <TextBlock Text="{Binding StandardError, StringFormat='{}{0:F2}'}" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Question Area -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="12" Padding="30">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentStem}" 
                               FontSize="18" FontWeight="Medium" TextWrapping="Wrap" Margin="0,0,0,25"/>
                    
                    <ListBox ItemsSource="{Binding CurrentChoices}" 
                             SelectedItem="{Binding SelectedChoice}"
                             Margin="0,0,0,20"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,6" Background="#F8FAFC" CornerRadius="8"
                                        BorderBrush="#CBD5E1" BorderThickness="1">
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="15"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <TextBlock Text="{Binding FeedbackMessage}" 
                               FontSize="16" FontWeight="SemiBold" TextAlignment="Center"
                               Foreground="#10B981"
                               Visibility="{Binding ShowFeedback, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Submit Answer" 
                        Command="{Binding SubmitAnswerCommand}"
                        Padding="20,12"
                        Background="#10B981" Foreground="White" FontWeight="SemiBold" BorderThickness="0"
                        Margin="0,0,10,0"/>
                
                <Button Content="End Session" 
                        Command="{Binding ResetSessionCommand}"
                        Padding="20,12"
                        Background="#EF4444" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Session Complete Panel -->
        <Border Grid.Row="1" Background="#F0FDF4" CornerRadius="12" Padding="40"
                Visibility="{Binding SessionComplete, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Session Complete!" FontSize="28" FontWeight="Bold" Foreground="#10B981" TextAlignment="Center"/>
                
                <StackPanel Margin="0,30,0,0">
                    <TextBlock Text="{Binding FinalReport.FinalAbility, StringFormat='Final Ability: {0:F2}'}" 
                               FontSize="18" TextAlignment="Center"/>
                    <TextBlock Text="{Binding FinalReport.StandardError, StringFormat='Standard Error: {0:F2}'}" 
                               FontSize="14" Foreground="#64748B" TextAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding FinalReport.AccuracyPercent, StringFormat='Accuracy: {0:F1}%'}" 
                               FontSize="18" TextAlignment="Center" Margin="0,15,0,0"/>
                    <TextBlock FontSize="14" Foreground="#64748B" TextAlignment="Center" Margin="0,5,0,0">
                        <Run Text="{Binding FinalReport.CorrectResponses, Mode=OneWay}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding FinalReport.TotalResponses, Mode=OneWay}"/>
                        <Run Text=" correct"/>
                    </TextBlock>
                </StackPanel>
                
                <Button Content="Start New Session" 
                        Command="{Binding ResetSessionCommand}"
                        Padding="20,12" Margin="0,30,0,0"
                        Background="#2563EB" Foreground="White" FontWeight="SemiBold" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
