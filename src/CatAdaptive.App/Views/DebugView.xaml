<UserControl x:Class="CatAdaptive.App.Views.DebugView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatAdaptive.App.Views"
             xmlns:vm="clr-namespace:CatAdaptive.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="40">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="System Debug" FontSize="28" FontWeight="Bold" Foreground="#1E293B" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" 
                            Content="Refresh Data" 
                            Command="{Binding RefreshCommand}"
                            Padding="15,10"
                            Background="#2563EB"
                            Foreground="White"
                            BorderThickness="0"
                            AutomationProperties.Name="Refresh debug data"/>
                </Grid>

                <!-- System Info -->
                <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="System Configuration" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding SystemInfo}" FontFamily="Consolas" Foreground="#334155" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Repository Stats -->
                <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Data Repository Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding RepositoryStats}" FontFamily="Consolas" Foreground="#334155" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Current Session -->
                <Border Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Current Session Context" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentSessionDetails}" FontFamily="Consolas" Foreground="#334155" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
