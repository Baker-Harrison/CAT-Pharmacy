<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="WindowBackgroundColor">#F8FAFC</Color>
    <Color x:Key="SidebarBackgroundColor">#1E293B</Color>
    <Color x:Key="HeaderBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ContentBackgroundColor">#FFFFFF</Color>
    <Color x:Key="BorderColor">#E2E8F0</Color>
    <Color x:Key="PrimaryTextColor">#1E293B</Color>
    <Color x:Key="SecondaryTextColor">#64748B</Color>
    <Color x:Key="SidebarTextColor">#94A3B8</Color>
    <Color x:Key="NavHoverColor">#334155</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource ContentBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}"/>
    <SolidColorBrush x:Key="NavHoverBrush" Color="{StaticResource NavHoverColor}"/>

</ResourceDictionary>
