<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Palette -->
    <Color x:Key="PrimaryColor">#4F46E5</Color>
    <Color x:Key="PrimaryDarkColor">#4338CA</Color>
    <Color x:Key="PrimaryLightColor">#818CF8</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    
    <!-- Secondary Palette -->
    <Color x:Key="SecondaryColor">#14B8A6</Color>
    <Color x:Key="SecondaryDarkColor">#0D9488</Color>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#FAFAFA</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="SidebarColor">#1E1B4B</Color>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimaryBrush">#1E293B</SolidColorBrush>
    <SolidColorBrush x:Key="TextSecondaryBrush">#64748B</SolidColorBrush>
    <SolidColorBrush x:Key="TextTertiaryBrush">#94A3B8</SolidColorBrush>
    <SolidColorBrush x:Key="TextOnDarkBrush">#F8FAFC</SolidColorBrush>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderLightBrush">#E2E8F0</SolidColorBrush>
    <SolidColorBrush x:Key="BorderMediumBrush">#CBD5E1</SolidColorBrush>
    
    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="SuccessBrush">#10B981</SolidColorBrush>
    <SolidColorBrush x:Key="WarningBrush">#F59E0B</SolidColorBrush>
    <SolidColorBrush x:Key="ErrorBrush">#F43F5E</SolidColorBrush>
    <SolidColorBrush x:Key="InfoBrush">#3B82F6</SolidColorBrush>
    
    <!-- Semantic Backgrounds -->
    <SolidColorBrush x:Key="SuccessBackgroundBrush">#ECFDF5</SolidColorBrush>
    <SolidColorBrush x:Key="WarningBackgroundBrush">#FFFBEB</SolidColorBrush>
    <SolidColorBrush x:Key="ErrorBackgroundBrush">#FFF1F2</SolidColorBrush>
    <SolidColorBrush x:Key="InfoBackgroundBrush">#EFF6FF</SolidColorBrush>
    
</ResourceDictionary>
